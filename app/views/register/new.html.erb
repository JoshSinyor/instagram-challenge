<head>
  <style>
    #register-container {
      min-width: 34rem;
      max-width: 44rem;
      margin: auto;
      padding: 2rem;
      border: 0.05rem solid black;
      border-radius: 1rem;
    }
  </style>
</head>

<h1>Sign Up</h1>

<div class="container bg-light" id="register-container">
    <%= form_with model: @user, url: sign_up_path do |form| %>

      <% if @user.errors.any? %>
        <div class="alert alert-danger">
          <% @user.errors.full_messages.each do |message| %>
            <div><%= message %></div>
          <% end %>
        </div>
      <% end %>

      <div class="row mb-3 col-sm text-capitalize">
        <div class="col">
          <%= form.label :first_name %>
          <%= form.text_field :first_name, class: "form-control", placeholder: "Enter First Name" %>
        </div>
        <div class="col">
          <%= form.label :last_name %>
          <%= form.text_field :last_name, class: "form-control", placeholder: "Enter Surname" %>
        </div>
      </div>

      <div class="mb-3 col-sm">
        <div class="col alert-danger form-control" id="name-warning">
          Warning!
        </div>
      </div>

      <div class="row mb-3 col-sm">
        <%= form.label :username %>
        <div class="col">
          <%= form.text_field :username, class: "form-control", placeholder: "Enter Username" %>
        </div>
        <div class="col alert-danger form-control" id="username-warning">
          Warning!
        </div>
      </div>
      <div class="row mb-3 col-sm">
        <%= form.label :email %>
        <div class="col">
          <%= form.text_field :email, class: "form-control", placeholder: "Enter e-Mail Address" %>
        </div>
        <div class="col alert-danger form-control" id="email-warning">
          Warning!
        </div>
      </div>
      <div class="row mb-3">
        <%= form.label :password %>
        <div class="col">
          <%= form.password_field :password, class: "form-control", placeholder: "Enter New Password" %>
        </div>
        <div class="col">
          <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Repeat New Password" %>
        </div>
      </div>
      <div class="mb-3 col-sm">
        <div class="col alert-danger form-control" id="password-warning">
          Warning!
        </div>
      </div>

      <div style="text-align: center">
        <%= form.submit "Sign Up", class: "btn btn-light", id: "sign-up-btn" %>
      </div>
    <% end %>
</div>
